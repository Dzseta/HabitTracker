<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hamburgerMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/medium_gray"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:onClick="openCloseHamburgerMenu"
            android:text="@string/app_name" />

        <LinearLayout
            android:id="@+id/categoriesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/categoryImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_categories" />

            <TextView
                android:id="@+id/categoriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_categories" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/habitsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/habitsImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_double_check" />

            <TextView
                android:id="@+id/habitsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_habits" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settingsImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_settings" />

            <TextView
                android:id="@+id/settingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_options" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_profile" />

            <TextView
                android:id="@+id/profileTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_profile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/backupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backupImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_cloud_upload" />

            <TextView
                android:id="@+id/backupTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_backups" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ratingImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_review" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_rating" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:padding="10dp"
            android:background="@drawable/selector_button_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/helpImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="?attr/colorPrimary"
                android:paddingRight="10dp"
                android:src="@drawable/icon_question" />

            <TextView
                android:id="@+id/helpTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:text="@string/hamburger_help" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>