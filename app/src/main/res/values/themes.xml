<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- COLOURS -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/medium_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status- and navbar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/medium_gray</item>
        <!-- Text color. -->
        <item name="android:textColor">?attr/colorOnSecondary</item>

        <!-- No windows animation- -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.HabitTracker.Red" parent="Theme.HabitTracker">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
    </style>

    <style name="Theme.HabitTracker.Green" parent="Theme.HabitTracker">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
    </style>

    <style name="Theme.HabitTracker.Blue" parent="Theme.HabitTracker">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
    </style>

    <style name="RatingBar" parent="Theme.HabitTracker">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="ReverseColors" parent="Theme.HabitTracker">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorOnPrimary">@color/light_gray</item>
    </style>

    <style name="Theme.HabitTracker.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.HabitTracker.AppWidgetContainer" parent="Theme.HabitTracker.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>