<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- COLOURS -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/medium_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <!-- Status- and navbar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/medium_gray</item>
        <!-- Text color. -->
        <item name="android:textColor">?attr/colorOnSecondary</item>

        <!-- No windows animation- -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.HabitTracker.Red" parent="Theme.HabitTracker">
        <!-- COLOURS -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.HabitTracker">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="ReverseColors" parent="Theme.HabitTracker">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorOnPrimary">@color/light_gray</item>
    </style>
</resources>